<GridPane alignment="center" hgap="10" maxHeight="1.7976931348623157E308"
  maxWidth="1.7976931348623157E308" prefHeight="600.0" prefWidth="750.0" vgap="10"
  xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
  fx:controller="application.Controller">
  <columnConstraints>
    <ColumnConstraints/>
  </columnConstraints>
  <rowConstraints>
    <RowConstraints/>
  </rowConstraints>
  <children>
    <TabPane prefHeight="675.0" prefWidth="943.0" tabClosingPolicy="UNAVAILABLE">
      <tabs>
        <Tab fx:id="productLine" text="Product Line">
          <content>
            <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
              <children>
                <GridPane fx:id="productLineInfo" layoutX="116.0" layoutY="14.0" prefHeight="232.0"
                  prefWidth="519.0">
                  <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" maxWidth="253.0" minWidth="10.0"
                      prefWidth="133.0"/>
                    <ColumnConstraints hgrow="SOMETIMES" maxWidth="396.0" minWidth="10.0"
                      prefWidth="386.0"/>
                  </columnConstraints>
                  <rowConstraints>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                  </rowConstraints>
                  <children>
                    <Label text="Product Name" textFill="#001c31" GridPane.halignment="RIGHT">
                      <GridPane.margin>
                        <Insets right="15.0"/>
                      </GridPane.margin>
                    </Label>
                    <TextField fx:id="txtProductName" GridPane.columnIndex="1"/>
                    <Label text="Manufacturer" textFill="#001c31" GridPane.halignment="RIGHT"
                      GridPane.rowIndex="1">
                      <GridPane.margin>
                        <Insets right="15.0"/>
                      </GridPane.margin>
                    </Label>
                    <Label text="Item Type" textFill="#001c31" GridPane.halignment="RIGHT"
                      GridPane.rowIndex="2">
                      <GridPane.margin>
                        <Insets right="15.0"/>
                      </GridPane.margin>
                    </Label>
                    <TextField fx:id="txtManufacturer" GridPane.columnIndex="1"
                      GridPane.rowIndex="1"/>
                    <ChoiceBox fx:id="choiceItemType" prefHeight="32.0" prefWidth="434.0"
                      GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                  </children>
                </GridPane>
                <Button fx:id="btnAddProduct" layoutX="517.0" layoutY="246.0"
                  mnemonicParsing="false" onAction="#addProduct" text="Add Product"/>
                <AnchorPane fx:id="tblExistingProducts" layoutX="58.0" layoutY="296.0"
                  prefHeight="252.0" prefWidth="635.0">
                  <children>
                    <TableView layoutX="62.0" layoutY="26.0" prefHeight="200.0" prefWidth="512.0">
                      <columns>
                        <TableColumn prefWidth="75.0" text="C1"/>
                        <TableColumn prefWidth="75.0" text="C2"/>
                      </columns>
                    </TableView>
                    <Label layoutX="62.0" layoutY="4.0" text="Existing Products"/>
                  </children>
                </AnchorPane>
              </children>
            </AnchorPane>
          </content>
        </Tab>
        <Tab fx:id="produce" text="Produce">
          <content>
            <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
              <children>
                <Label layoutX="124.0" layoutY="62.0" text="Choose Product"/>
                <ListView layoutX="275.0" layoutY="62.0" prefHeight="200.0" prefWidth="302.0"/>
                <Label layoutX="122.0" layoutY="308.0" text="Choose Quantity"/>
                <ComboBox fx:id="cboQuantity" layoutX="275.0" layoutY="306.0" prefWidth="150.0"/>
                <Button fx:id="btnRecordProduction" layoutX="275.0" layoutY="376.0"
                  mnemonicParsing="false" onAction="#recordProduction" text="Record Production"/>
              </children>
            </AnchorPane>
          </content>
        </Tab>
        <Tab fx:id="productionLog" text="Production Log">
          <content>
            <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
              <children>
                <TextArea layoutX="55.0" layoutY="48.0" prefHeight="475.0" prefWidth="641.0"/>
              </children>
            </AnchorPane>
          </content>
        </Tab>
      </tabs>
    </TabPane>
  </children>
</GridPane>
